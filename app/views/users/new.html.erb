<div class="container width-100vw height-80vh back-image">
  <div class="top-10 position-relative height-100">
    <div class="container d-flex align-items-center height-50vh width-50 my-auto border back-white">
      <div class="container text-center">
        <p class="h1 mb-0">O-TechHub</p>
        <p>オーテックハブ</p>
        <p>オリエンテーリング技術記事投稿サイト</p>
      </div>
      <div class="container">
        <%= form_with model: @user, local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class='form-group py-2 d-flex justify-content-end'>
          <%= f.label :first_name, '姓', class: "me-2" %>
          <%= f.text_field :first_name %>
        </div>
        <div class='form-group py-2 d-flex justify-content-end'>
          <%= f.label :last_name, '名', class: "me-2" %>
          <%= f.text_field :last_name %>
        </div>
        <div class='form-group py-2 d-flex justify-content-end'>
          <%= f.label :email, 'メールアドレス', class: "me-2" %>
          <%= f.text_field :email %>
        </div>
        <div class='form-group py-2 d-flex justify-content-end'>
          <%= f.label :password,'パスワード(8文字以上)', class: "me-2" %>
          <%= f.password_field :password %>
        </div>
        <div class='form-group py-2 d-flex justify-content-end'>
          <%= f.label :password_confirmation, 'パスワード確認', class: "me-2" %>
          <%= f.password_field :password_confirmation %>
        </div>
        <div class='form-group py-2 d-flex justify-content-end'>
          <%= link_to 'ログインはこちら', login_path, class: "btn btn-outline-dark btn-sm mx-2" %>
          <%= f.submit 'アカウント作成', class: "btn btn-dark" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

