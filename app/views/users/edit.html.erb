<h1>アカウント詳細設定</h1>
<%= form_with model: @user,local: true do |f|%>
  <div class="form-group">
    <%= f.label :first_name,"姓" %>
    <%= f.text_field :first_name%>
  </div>
  <div class="form-group">
    <%= f.label :last_name,"名" %>
    <%= f.text_field :last_name%>
  </div>
  <div class="form-group">
    <%= f.label :email,"メールアドレス" %>
    <%= f.text_field :email%>
  </div>
  <div class="form-group">
    
  </div>
  <div class="form-group">
    <%= f.label :orien_started_at,"オリエン開始年" %>
    <%= f.text_field :orien_started_at%>
  </div>
  <div class="form-group">
    <%= f.label :affilication,"所属" %>
    <%= f.text_field :affilication%>
  </div>
  <div class="form-group">
    <%= f.label :university,"出身大学" %>
    <%= f.text_field :university%>
  </div>
  <div class="form-group">
    <%= f.label :entered_university_at,"大学入学年度" %>
    <%= f.text_field :entered_university_at%>
  </div>
  <div class="form-group">
    <%= f.label :favorite_terrain,"好きなテレイン" %>
    <%= f.text_field :favorite_terrain%>
  </div>
  <div class="form-group">
  <div class="radio-group">
    <%= f.radio_button :favorite_event, "スプリント"%>
    <%= f.label :favorite_event,"スプリント" %>
    <%= f.radio_button :favorite_event, "ミドル"%>
    <%= f.label :favorite_event,"ミドル" %>
    <%= f.radio_button :favorite_event, "ロング"%>
    <%= f.label :favorite_event,"ロング" %>
    <%= f.radio_button :favorite_event, "リレー"%>
    <%= f.label :favorite_event,"リレー" %>
  </div>
  </div>
  <div class="form-group">
    <%= f.label :achievement,"主な実績" %>
    <%= f.text_field :achievement%>
  </div>
  <div class="form-group">
    <%= f.label :something_to_say,"一言" %>
    <%= f.text_field :something_to_say%>
  </div>
  <%= f.submit '更新する'%>
<% end %>