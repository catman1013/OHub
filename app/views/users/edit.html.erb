<div class="container">

  <%= form_with model: @user, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="container my-4">
      <div class='form-group my-2'>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class='form-group my-2'>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
      <div class='form-group my-2'>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class='form-group my-2'>
        <%= f.label :orien_started_at %>
        <%= f.date_select :orien_started_at, start_year: 1960, end_year: Time.now.year, discard_month: true, discard_day:true, include_blank: '選択して下さい' %>
      </div>
      <div class='form-group my-2'>
        <%= f.label :affilication %>
        <%= f.text_field :affilication %>
      </div>
      <div class='form-group my-2'>
        <%= f.label :university %>
        <%= f.text_field :university %>大学
      </div>
      <div class='form-group my-2'>
        <%= f.label :entered_university_at %>
        <%= f.date_select :entered_university_at, start_year: 1960, end_year: Time.now.year, discard_month: true, discard_day:true, include_blank: '選択して下さい' %>
      </div>
      <div class='form-group my-2'>
        <%= f.label :favorite_terrain %>
        <%= f.text_field :favorite_terrain %>
      </div>
      <div class='radio-group my-2'>
        <%= f.label :favorite_event %>
        <%= f.collection_radio_buttons :favorite_event, User.favorite_events.keys.map {|k| [I18n.t("enums.user.favorite_event.#{k}"), k]}, :last, :first %>
      </div>
      <div class='form-group my-2'>
        <%= f.label :achievement %>
        <%= f.text_field :achievement %>
      </div>
      <div class='form-group my-2'>
        <%= f.label :something_to_say %>
        <%= f.text_field :something_to_say %>
      </div>
    </div>
    <div class="container">
      <%= f.submit '更新する', data: { disable_with: "更新しています..." }, class: 'btn btn-outline-dark' %>
    </end>
  <% end %>
</div>