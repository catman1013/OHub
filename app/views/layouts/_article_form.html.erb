<%= form_with model: @article,　local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="container d-flex">
    <div class="container category-select">
      <p>カテゴリーを選択してください。</p>
      <div class='radio-group my-2' id='category'>
        <%= f.collection_radio_buttons :category, Article.categories.keys.map {|k| [I18n.t("enums.article.category.#{k}"), k]}, :last, :first %>
      </div>
      <div class="mx-3">
      <div class='radio-group' id='tech_category'>
        <%= f.collection_radio_buttons :tech_category, Article.tech_categories.keys.map {|k| [I18n.t("enums.article.tech_category.#{k}"), k]}, :last, :first %>
      </div>
      </div>
    </div>
    <div class="container">
      <div class='form-group'>
        <p class='mb-0'><%= f.label :title%></p>
        <%= f.text_field :title, placeholder:"タイトルを入力", class: "ho" %>
      </div>
      <div class='form-group'>
        <p class='mb-0 mt-4'><%= f.label :content, '本文' %></p>
        <%= f.text_area :content, placeholder:"本文を入力", cols:80, rows: 20, id: "textarea" %>
      </div>
    </div>
    <div class='container d-flex align-items-end'>
    </div>
  </div>
  <div class='container d-flex align-items-end position-absolute position-fixed bottom-70 start-1100'>
    <div class='d-flex justify-content-end selectbox_group me-3'>
      <%= f.collection_select :status, Article.statuses.keys.map {|k| [I18n.t("enums.article.status.#{k}"), k]}, :last, :first, class: "select-wrapper" %>
    </div>
    <div class='d-flex justify-content-end'>
      <%= f.submit data: { disable_with: "保存しています..." }, class: 'btn btn-outline-success'%>
    </div>
  </div>
<% end %>
  
  
  
