<div class="pt-4p">
  <div class="container">
    <p class="my-0">
      <span class="fw-light fs-8"><%= comment.created_at.year %>/<%= comment.created_at.month %>/<%= comment.created_at.day %></span>
      <% if current_user&.commenter_or_not?(comment) %>
        <span class="fs-8"><%= comment.user.first_name %></span>
      <% else %>
        <span class="fs-8"><%= link_to comment.user.first_name, user_path(comment.user_id) %></span>
      <% end %>
    </p>
    <p class="m-0 overflow-wrap fs-8"><%= comment.content %></p>
    <div class="d-flex comment-delete-btn">
      <% if current_user&.commenter_or_not?(comment) %>
        <%= link_to 'コメント消去', article_comment_path(article, comment), method: :delete, remote: :true, class: "btn btn-sm delete-btn"%>
      <% end %>
    </div>
  </div>
</div>