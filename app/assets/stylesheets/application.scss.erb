  border: none;
}

.after-link::after {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  pointer-events: auto;
  content: "";
  background-color: transparent;
}

.after-link2 {
  z-index: 2;
}

.article-box {
	-webkit-transition:	all 0.4s ease;
	transition: all 0.2s;
}

//article_index------------------
.index-container {
  .btn-wrapper {
    background-color: #fff;
    color: #363636;
    .nav-btn {
      background-color: #fff;
    }
    .fa-paw {
      color: #646464;
    }
  }
  .article-wrapper {
    .name-btn {
      border-color: #4d4d4d;
      color: black;
    }
    .name-btn:hover {
      background-color: #5f5f5f;
      color: white;
    }
  }
  .pagenation a{
    color: #4d4d4d;
  }
}

//user_show------------------
#mypage-container {
  width: 80%;
  .mypage-profile {
    background-color: rgba(255, 255, 255, 0.5);
    .myp {
      margin-top: 16px;
      font-weight: bold;
    }
    .profile-icon {
      font-size: 12vw;
      color: #AA5C00;
    }
  }
  
  .text-profile {
    text-align: right;
    margin-top: 20px;
  }
  .account-btn {
    justify-content: end;
  }
}

//メディアクエリ------------------
@media (max-width:768px) {
  .index-container {
    .dropdown-menu{
      margin-left: 16px;
    }
  }
  #comments{
    width: 80%;
    max-width: 1000px;
    margin: 0 auto;
      .comment-container {
        padding: 10px;
      }
      p {
        text-align: center;
        font-sixe: 1.2rem;
      }
      .bookmark-container {
        display: flex;
        flex-direction: column;
          p {
            text-align: center;
            margin-top: 8px;
          }
      }
      .comment-btn{
        justify-content: center;
      }
      .comment-delete-btn {
        justify-content: center;
      }
  }

  #mypage-container {
    .mypage-profile {
      width: 80%;
      border: 1px solid #CCC;
      background-color: rgba(255,255,255,0.9);
      color: black;
        
        .profile-icon {
          text-align: center;
          font-size: 25vw;
          color: black;
          }

      .text-profile {
        padding-left: 15%;
        text-align: center;
        margin-bottom: 4px;
          p {
            margin-bottom: 0;
            margin-top: 2px;
            padding-bottom: 3%;
            font-size: 1.05rem;
          }
      }

      .account-btn {
        justify-content: center;
      }
    }

    .articles-container {
      .article-boxes {
        flex-direction: column;
        align-items: center;
      }
      .button-container {
        justify-content: center;
        margin-top: 10px;
      }
    }
  }

  #article-form-container {
      display: flex;
      flex-direction: column;
      .radio-group {
        margin-top: 0;
      }
      .category-select {

      }
      .content-form {
        margin-top: 16px;
      }
      .submit-btn {
        margin-top: 16px;
        justify-content: end;
      }
  }


  .edit-user-container {
    height: 100%;
    display: flex;
    flex-direction: column;
      th {
          display: block;
          width: 100%;
          text-align: start;
          margin-bottom: 0;
          margin-top: 10px;
        }
        
      td {
        display: block;
        width: 100%;
      }
  }
}